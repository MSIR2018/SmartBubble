{

  "manifest_version": 2,
  "name": "SmartBubble",
  "version": "1.0",

  "description": "IA for Bubblemaker",
  "homepage_url": "https://github.com/",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "SmartBubble",
    "default_popup": "popup/choose_beast.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]

}